{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "ES6",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "typeRoots": ["../../node_modules/@types", "../../typings"],
    "rootDir": "src"
  },
  "include": ["src"]
}
